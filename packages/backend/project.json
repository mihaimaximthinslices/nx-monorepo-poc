{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/backend/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/backend",
        "main": "packages/backend/src/index.ts",
        "tsConfig": "packages/backend/tsconfig.lib.json",
        "assets": ["packages/backend/*.md"]
      }
    },
    "deploy": {
      "command": "pnpm install && npx ampx pipeline-deploy --branch $AWS_BRANCH --app-id $AWS_APP_ID",
      "options": {
        "cwd": "packages/backend"
      }
    },
    "deploy-sales-app": {
      "command": "pnpm install && npx ampx generate outputs --branch blog-app-deploy --app-id $AWS_APP_ID",
      "options": {
        "cwd": "packages/backend"
      }
    },
    "sandbox": {
      "command": "npx ampx sandbox --profile personal --outputs-out-dir ../../apps",
      "options": {
        "cwd": "packages/backend"
      }
    }
  }
}
